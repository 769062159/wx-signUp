/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}
.container{
  background-color: #fff;
}
.usermotto {
  margin-top: 200px;
}

.container .item{
  width: 100%;
  margin-bottom: 10rpx;
  height: 350rpx;
  position: relative;
  /* margin-bottom: 10rpx; */
}
.container .item image{
  width: 100%;
  height: 350rpx;
  position: absolute;
}
.container .item .content{
  width: 100%;
  height: 120rpx;
  position: absolute;
  bottom: 0;
  background-color: rgba(0, 0, 0, .56);
  
}
.container .item .content .title{
  color: #fff;
  font-size: 30rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
}
.container .item .content .time{
  font-size: 24rpx;
  margin-top: 25rpx;
  color: #fff;
  margin-left: 10rpx;
}